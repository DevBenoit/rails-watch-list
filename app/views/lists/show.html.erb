
<div class="container p-5">
  <h1>My list of movies: </h1>

  <h2><%= @list.name %></h2>

  <div class="container m-3">
    <% @list.bookmarks.each do |bookmark| %>
      <p><strong> <%= bookmark.movie.title %> : </strong> <%= bookmark.comment %> </p>
      <% end %>
  </div>
    <%= link_to('Back to the list', lists_path, class: "btn btn-outline-primary mt-2") %>
</div>

